{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "common-settings",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TLSUV_TLSLIB": "mbedtls",
        "CMAKE_C_EXTENSIONS": "ON",
        "CMAKE_C_STANDARD": "99",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD": "11",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "flags-unix",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_FLAGS": "",
        "CMAKE_CXX_FLAGS": ""
      }
    },
    {
      "name": "common-unix",
      "hidden": true,
      "inherits": [
        "flags-unix"
      ],
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "macOS-x64",
      "binaryDir": "${sourceDir}/build/macOS-x64",
      "inherits": [
        "common-settings",
        "common-unix"
      ]
    },
    {
      "name": "macOS-arm64",
      "binaryDir": "${sourceDir}/build/macOS-arm64",
      "inherits": [
        "common-settings",
        "common-unix"
      ],
      "cacheVariables": {
        "VCPKG_TARGET_ARCHITECTURE": "arm64",
        "VCPKG_TARGET_TRIPLET": "arm64-osx",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/macOS-arm64.cmake"
      }
    },
    {
      "name": "ios-arm64",
      "binaryDir": "${sourceDir}/build/ios-arm64",
      "inherits": [
        "common-settings",
        "common-unix"
      ],
      "cacheVariables": {
        "VCPKG_TARGET_ARCHITECTURE": "arm64",
        "VCPKG_TARGET_TRIPLET": "arm64-osx",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/iOS-arm64.cmake"
      }
    },
    {
      "name": "linux-x64",
      "binaryDir": "${sourceDir}/build/linux-x64",
      "inherits": [
        "common-settings",
        "common-unix"
      ]
    },
    {
      "name": "linux-arm64",
      "binaryDir": "${sourceDir}/build/linux-arm64",
      "inherits": [
        "common-settings",
        "common-unix"
      ],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-linux",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/Linux-arm64.cmake"
      }
    },
    {
      "name": "linux-arm",
      "binaryDir": "${sourceDir}/build/linux-arm",
      "inherits": [
        "common-settings",
        "common-unix"
      ],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm-linux",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/Linux-arm.cmake"
      }
    },
    {
      "name": "common-windows",
      "description": "Note that all the flags after /W4 are required for MSVC to conform to the language standard",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_FLAGS": "/utf-8 /W4 /permissive- /volatile:iso /Zc:preprocessor",
        "CMAKE_CXX_FLAGS": "/utf-8 /W4 /permissive- /volatile:iso /Zc:preprocessor /Zc:__cplusplus /Zc:externConstexpr /Zc:throwingNew /EHsc"
      },
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "win64",
      "binaryDir": "${sourceDir}/build/win64",
      "inherits": [
        "common-settings",
        "common-windows"
      ],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      }
    },
    {
      "name": "win32",
      "binaryDir": "${sourceDir}/build/win32",
      "inherits": [
        "common-settings",
        "common-windows"
      ],
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x86-windows-static-md"
      }
    },
    {
      "name": "ci-windows-arm64",
      "binaryDir": "${sourceDir}/build/win-arm64",
      "inherits": [
        "common-settings",
        "common-windows"
      ],
      "architecture": "ARM64",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-windows-static-md",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/Windows-arm64.cmake"
      }
    }
  ]
}
